            </p>
          </div>
        </div>
      </div>
      <a class="btn-help" href="#">Ir a Sección de Ayuda</a>
    </div>
  </div>
</section>

<style>
  /*#region CONSULTAS */
  section.consultas {
    position: relative;

    padding: 80px 0;
    overflow: hidden;
  }

  section.consultas .background-img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  section.consultas .background-img img {
    width: 100%;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    min-height: 100%;
    min-width: 100%;
    object-fit: cover;
    height: auto;
  }

  section.consultas .container {
    display: flex;
    justify-content: space-between;
    gap: 30px;

    position: relative;
  }
  section.consultas .part1,
  section.consultas .part2 {
    width: 50%;
  }
  section.consultas .part1 h2 {
    margin-bottom: 20px;

    color: #000;
    font-family: AMX;
    font-size: 32px;
    font-weight: 700;
    line-height: normal;
  }

  section.consultas .part1 a {
    display: none;
  }

  @media (min-width: 901px) {
    section.consultas .part1 a {
      display: flex;
      margin: inherit;
      margin-top: 20px;
    }
  }

  section.consultas a {
    display: flex;
    align-items: center;
    justify-content: center;

    border-radius: 24px;
    padding: 12px;
    margin: auto;
    margin-top: 20px;
    width: 240px;
    height: 40px;
    border: 1.5px solid;
    font-family: Roboto;
    font-size: 16px;
    font-weight: 700;
    color: #da291c;
    text-decoration: none;
    transition: all 0.3s ease-in-out;
  }

  section.consultas a:hover {
    background-color: #da291c;
    color: #fff;
  }

  @media (min-width: 901px) {
    section.consultas .part2 a {
      display: none;
    }
  }

  section.consultas .part2 .items {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  section.consultas .part2 .items .item {
    transition: transform 0.2s ease;
    border-radius: 12px;
    overflow: hidden;
    background: rgba(255, 255, 255, 0.4);

    transition: 0.5s ease;
  }

  section.consultas .part2 .items .item:hover {
    transform: translateY(-3px);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }

  section.consultas .part2 .items .item .cabecera {
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-radius: 12px;
    background: rgba(250, 250, 250, 0.4);
    padding: 20px;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  section.consultas .part2 .items .item.active {
    transform: translateY(-3px);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }

  section.consultas .part2 .items .item .cabecera h3 {
    flex-basis: calc(100% - 30px);
    color: #6c6c6c;
    font-family: Roboto;
    font-size: 16px;
    font-style: normal;
    font-weight: 500;
    line-height: normal;
    margin-right: 10px;
  }

  section.consultas .part2 .items .item .cabecera .icons {
    flex-basis: 30px;

    position: relative;
    width: 24px;
    height: 24px;
  }

  section.consultas .part2 .items .item .cabecera .icons img {
    position: absolute;
    top: 0;
    left: 0;
    width: 20px;
    height: 20px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  section.consultas .part2 .items .item .cabecera .icons .mas {
    opacity: 1;
    transform: rotate(0deg);
  }

  section.consultas .part2 .items .item.active .cabecera .icons .mas {
    opacity: 0;
    transform: rotate(90deg);
  }

  section.consultas .part2 .items .item .cabecera .icons .menos {
    opacity: 0;
    transform: rotate(-90deg);
  }

  section.consultas .part2 .items .item.active .cabecera .icons .menos {
    opacity: 1;
    transform: rotate(0deg);
  }

  section.consultas .part2 .items .item .info {
    max-height: 0;
    overflow: hidden;
    opacity: 0;
    padding: 0 20px;
    margin-top: 0;

    /* Flexbox siempre activo pero invisible */
    display: flex;
    flex-direction: column;
    gap: 15px;

    /* Transición suave */
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }
  section.consultas .part2 .items .item .info h4 {
    color: #6c6c6c;
    font-family: Roboto;
    font-size: 16px;
    font-weight: 800;
    line-height: normal;
  }

  section.consultas .part2 .info ol {
    list-style: decimal;
    padding: 0 20px;
  }

  section.consultas .part2 .info ol li {
    margin-bottom: 5px;
  }

  section.consultas .part2 .items .item .info p,
  section.consultas .part2 .items .item .info li,
  section.consultas .part2 .items .item .info a {
    color: #6c6c6c;
    font-family: Roboto;
    font-size: 16px;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
  }

  section.consultas .part2 .items .item .info strong {
    font-weight: bold;
  }

  section.consultas .part2 .items .item.active .info {
    max-height: 2000px; /* Ajusta según tu contenido más largo */
    opacity: 1;
    padding: 20px;
  }

  section.consultas .part2 .items .item .info > * {
    transform: translateY(-5px);
    transition: transform 0.3s ease 0.1s;
  }

  section.consultas .part2 .items .item.active .info > * {
    transform: translateY(0);
  }

  @media (max-width: 1024px) {
    section.consultas .part1 {
      width: 40%;
    }
    section.consultas .part2 {
      width: 60%;
    }
  }
  @media (max-width: 900px) {
    section.consultas .part1 h2 {
      font-size: 24px;
    }
    section.consultas .container {
      flex-direction: column;
    }
    section.consultas .part1,
    section.consultas .part2 {
      width: 100%;
    }
    section.consultas .part1 h2 br {
      display: none;
    }

    section.consultas {
      padding-bottom: 40px;
      padding-top: 40px;
    }
  }
  /*#endregion */
</style>

<script>
  /*============================================
      CONSULTAS
  =============================================== */
  const items = document.querySelectorAll("section.consultas .item");
  items.forEach((item) => {
    item.addEventListener("click", (e: MouseEvent) => {
      // Prevenir click en enlaces para que no interfieran
      if (e.target instanceof HTMLElement && e.target.tagName === "A") return;

      // si ya está activo, se quita
      if (item.classList.contains("active")) {
        item.classList.remove("active");
      } else {
        // quitar la clase a todos primero
        items.forEach((i) => i.classList.remove("active"));

        // agregar la clase al clicado con un pequeño delay para suavidad
        setTimeout(() => {
          item.classList.add("active");
        }, 100);
      }
    });
    // Mejorar accesibilidad
    const cabecera = item.querySelector(".cabecera");
    if (cabecera) {
      cabecera.setAttribute("tabindex", "0");
      cabecera.setAttribute("role", "button");

      // Soporte para teclado
      cabecera.addEventListener("keydown", (e: KeyboardEvent) => {
        if (e.key === "Enter" || e.key === " ") {
          e.preventDefault();
          item.dispatchEvent(new MouseEvent("click"));
        }
      });
    }
  });
</script>
