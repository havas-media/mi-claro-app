    display: flex;
    justify-content: center;
    align-items: center;

    flex-basis: calc(32px);

    width: 32px;
    height: 32px;
  }

  .about-description_links .btn-link p {
    flex: 1;
    margin: 0 15px;

    font-size: 16px;
    color: #3c3c3c;
    font-weight: 700;
  }

  .about-description_links .btn-link svg {
    flex-basis: calc(16px);

    color: #3c3c3c;
    width: 16px !important;
    height: 16px !important;
